!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %title XXI Congresso Brasileiro de Fruticultura
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "author", :content => "Participe.de - Tink!" }
    %meta{ :name => "description", :content => "XXI Congresso Brasileiro de Fruticultura" }
    %meta{ :name => "keywords", :content => "XXI, congresso, brasileiro, fruticultura" }
    - %w(reset text 960 style sifr).each do |css_file|
      = css_tag("#{css_file}.css")
    %script{ :type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" }
    - %w(sifr sifr-config theme).each do |js_file|
      = script_tag("#{js_file}.js")
  %body
    #header
      %div{:class => "container_12 #{layout_type}"}
        #menu.grid_12
          %ul
            - site.posts.each do |post|
              %li{:class => "#{'current' if (page.title == post.title)}"}
                %a{ :href => post.url}= post.title
        #fruits.grid_12
          .grid_8.prefix_2
            %h1 Frutas: Saúde, inovação e sustentabilidade.
        #banner.grid_12
          #congresso.grid_4.prefix_1.alpha
            %img{ :src => "images/bg/bg-congresso.png", :alt => "XXI Congresso Brasileiro de Fruticultura" } 
          .grid_5.prefix_2.omega
            %img{ :src => "images/bg/bg-fruits.png", :alt => "XXI Congresso Brasileiro de Fruticultura" }
    %a.sbf{ :href => "http://www.sbfruti.com.br/associa.htm", :title => "Associe-se na SBF", :target => "_blank"}
      %img{ :src => "images/bg/bg-selo.png", :height => "126", :alt => "Associe-se na SBF"}
